<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="24sp"
            android:textStyle="bold"
            app:fontFamily="monospace" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/hijributton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_table"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableTop="@mipmap/hijri_cal130xx_2"
                    android:text="التقويم الهجري"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/calenderButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_table"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableTop="@mipmap/cal"
                    android:text="التقويم الميلادي"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/compassbutton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_table"
                    android:background="@android:color/transparent"
                    android:drawableTop="@mipmap/compass130xx_2"
                    android:onClick="get_qibla"
                    android:text="@string/qibla_direction_text"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/salawatbutton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_table"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableTop="@mipmap/qabaa130xx2"
                    android:text="اوقات الصلوات"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/reminder"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_table"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:drawableTop="@mipmap/azkar130xx_2"
                    android:text="المذكر"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </TableRow>
        </LinearLayout>

    </TableLayout>

</RelativeLayout>